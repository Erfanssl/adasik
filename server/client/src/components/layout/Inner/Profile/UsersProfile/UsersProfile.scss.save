@import "../../../../../sass/mixins";

.users-profile {
  &--container {
    padding: 1rem 2rem 0;
    position: relative;
    min-height: 93vh;
  }

  &--verbal-container {
    display: flex;
    margin-top: 7rem;
    position: relative;
    z-index: 10;

    @include responsive(small-laptop) {
      flex-direction: column;
      align-items: center;
    }
  }

  &--verbal__left {
    flex: 2;
    margin-top: -1rem;
  }

  &--verbal__avatar-container {
    position: relative;
  }

  &--verbal__avatar {
    width: 22rem;
    height: 22rem;
    background-color: white;
    border-radius: 50%;
    overflow: hidden;

    img {
      width: 100%;
      height: 100%;
    }
  }

  &--user__name {
    margin-top: 2rem;
    display: flex;
    font-size: 2.5rem;
    justify-content: center;
    align-items: center;
    width: 100%;
    position: relative;
  }

  &--friend-badge__container {
    position: absolute;
    top: -54%;
    right: 20%;
    height: 120%;

    img {
      height: 100%;
    }

    p {
      position: absolute;
      font-size: .8rem;
      font-family: Roboto-Bold;
      top: 50%;
      left: 50%;
      color: #ff69b4;
      transform: translate(-50%, -50%);
      letter-spacing: .1rem;
    }
  }

  &--user__last-seen {
    display: flex;
    justify-content: center;
    margin-top: 1rem;
    font-size: 1.3rem;

    .online {
      color: #0AFF0A;
    }

    .offline {
      color: #d6d6d6;
    }
  }

  &--user__like-holder {
    position: relative;
  }

  &--user__like-container {
    margin: 2rem auto 0;
    width: 80%;
    height: 4.7rem;
    border-radius: 1rem;
    overflow: hidden;
    cursor: pointer;
    background-color: #63d471;
    background-image: linear-gradient(180deg, #63d471 0%, #285835 74%);
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 1.7rem;

    &:hover {
      background-image: linear-gradient(120deg, #63d471 0%, #285835 74%);
    }

    &.liked {
      background-color: #3bb78f;
      background-image: linear-gradient(135deg, #3bb78f 0%, #0bab64 74%);

      &:hover {
        background-image: linear-gradient(275deg, #3bb78f 0%, #0bab64 74%);
      }

      .like--score-container {
        color: #285835;
      }
    }

    img {
      height: 90%;
      filter: invert(1);
      margin-left: 1.5rem;
    }

    .like--spinner-container {
      transform: scale(.4) translateX(50%);
    }

    .like--score-container {
      padding: 0 .5rem;
      height: 100%;
      color: #000;
      cursor: auto;
      background-color: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 1.7rem;
    }
  }

  &--like__result-container {
    font-size: 1.7rem;
    position: absolute;
    top: 115%;
    left: 50%;
    transform: translateX(-50%);

    &.success {
      color: #08ee88;
    }

    &.error {
      color: #ff0000;
    }
  }

  &--verbal__right {
    flex: 12;
    display: flex;
    flex-direction: column;

    @include responsive(small-laptop) {
      flex: none;
      width: 100rem;
      margin-top: 5rem;
    }

    @include responsive(tab-land-small) {
      width: 88rem;
    }

    @include responsive(tab-port-big) {
      width: 75rem;
    }

    @include responsive(tab-port) {
      display: none;
    }
  }

  &--right__row {
    display: flex;
    justify-content: flex-start;
    margin-left: 7rem;
    font-size: 1.8rem;
    margin-bottom: 3rem;

    p {
      width: 33%;

      span {
        color: rgba(255, 255, 255, .75);
      }
    }

    &.actions {
      margin: 2rem auto 1rem;
      position: relative;

      .result--container {
        position: absolute;
        top: -42%;
        width: 100%;
        display: flex;
        justify-content: center;

        @media only screen and (max-width: 31.25em) { //500px
          top: -58%;
        }

        p {
          width: 100%;
          text-align: center;
        }

        .result--error {
          color: #ff0000;
        }

        .result--success {
          color: #08ee88;
        }
      }

      & > div:not(.result--container) {
        width: 8rem;
        height: 8rem;
        margin-right: 8rem;
        background-color: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 50%;
        cursor: pointer;
        position: relative;

        @include responsive(tab-port) {
          margin-right: 4rem;
        }

        @include responsive(phone-big) {
          width: 7rem;
          height: 7rem;
          margin-right: 3rem;
        }

        @include responsive(phone) {
          width: 6.5rem;
          height: 6.5rem;
          margin-right: 2.8rem;
        }

        @media only screen and (max-width: 31.25em) { //500px
          width: 5.7rem;
          height: 5.7rem;
          margin-right: 1.6rem;
        }

        @include responsive(phone-small) {
          width: 5rem;
          height: 5rem;
          margin-right: 1.3rem;
        }

        .spinner--container {
          transform: scale(.7);
        }

        &:first-child {
          margin-left: 7rem;
        }

        img {
          transition: filter .2s;
        }

        &:hover {
          img {
            filter: brightness(1.2);
          }
        }

        &.action--block {
          background-color: transparent;
          position: relative;

          img {
            width: 110%;
          }

          .action--block__unlock {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 50%;
            transform: translate(-30%, -56%);
          }
        }

        &.action--challenge {
          background-color: #20bf55;
          background-image: linear-gradient(315deg, #20bf55 0%, #01baef 74%);

          img {
            width: 90%;
          }
        }

        &.action--add-friend {
          background-color: #7f5a83;
          background-image: linear-gradient(175deg, #7f5a83 0%, #0d324d 74%);

          img {
            width: 65%;
          }
        }

        &.action--report {
          background-color: #f9d29d;
          background-image: linear-gradient(315deg, #f9d29d 0%, #ffd8cb 74%);

          img {
            width: 100%;
          }
        }

        &.action--chat {
          background-color: #130f40;
          background-image: linear-gradient(175deg, #282079 0%, #130f40 74%);

          @include responsive(phone-big) {
            margin-left: 2rem;
          }

          img {
            width: 65%;
          }
        }
      }
    }
  }

  &--verbal__right--two {
    display: none;

    @include responsive(tab-port) {
      display: block;
    }

    .items--container {
      width: 80%;
      margin: 0 auto;
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;

      @include responsive(phone-big) {
        justify-content: center;
        text-align: center;
      }

      @include responsive(tab-port) {
        display: flex;
        //justify-content: center;
      }

      p {
        width: 25rem;
        //margin-left: 7rem;
        font-size: 1.8rem;
        margin-bottom: 3rem;

        @include responsive(phone-big) {
          width: 40rem;
        }

        span {
          color: rgba(255, 255, 255, .75);
        }
      }

      .actions {
        margin: 1rem auto 2rem;

        div {
          width: 8rem;
          height: 8rem;
          margin-right: 8rem;
          background-color: white;
          display: flex;
          justify-content: center;
          align-items: center;
          border-radius: 50%;
          cursor: pointer;

          @include responsive(tab-port) {
            margin-right: 4rem;
          }

          &:first-child {
            margin-left: 7rem;
          }

          img {
            transition: filter .2s;
          }

          &:hover {
            img {
              filter: brightness(1.2);
            }
          }

          &.action--block {
            background-color: transparent;

            img {
              width: 110%;
            }
          }

          &.action--challenge {
            background-color: #20bf55;
            background-image: linear-gradient(315deg, #20bf55 0%, #01baef 74%);

            img {
              width: 90%;
            }
          }

          &.action--add-friend {
            background-color: #7f5a83;
            background-image: linear-gradient(175deg, #7f5a83 0%, #0d324d 74%);

            img {
              width: 65%;
            }
          }

          &.action--report {
            background-color: #f9d29d;
            background-image: linear-gradient(315deg, #f9d29d 0%, #ffd8cb 74%);

            img {
              width: 100%;
            }
          }

          &.action--chat {
            background-color: #130f40;
            background-image: linear-gradient(175deg, #282079 0%, #130f40 74%);


            img {
              width: 65%;
            }
          }
        }
      }
    }
  }

  &--right__bottom-container {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    width: 90%;
    margin: 0 auto;

    @include responsive(tab-port) {
      display: flex;
      flex-direction: column;
    }
  }

  &--right__data-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    flex: 14;
  }

  &--right__bio-container, &--right__philosophy-container {
    margin-top: 1rem;
    display: flex;
    align-items: center;

    @include responsive(phone) {
      flex-direction: column;
      width: 90%;
      margin: 1rem auto;
      text-align: center;
    }

    @include responsive(phone-small) {
      flex-direction: column;
      width: 80%;
      margin: 1rem auto;
    }

    span {
      color: rgba(255, 255, 255, .75);
    }

    h3 {
      font-size: 1.8rem;
      font-weight: 300;
      margin-right: 1rem;

      @include responsive(phone) {
        margin-bottom: 1rem;
      }
    }

    p {
      font-size: 1.7rem;

      &:nth-child(3) {
        margin-left: 5rem;
      }
    }
  }

  &--right__social-container {
    flex: 6;
    display: flex;
    justify-content: flex-end;

    @include responsive(tab-port) {
      margin: 2rem 0;
    }
  }

  &--right__social-icon {
    background-color: #1DA1F2;
    width: 5rem;
    height: 5rem;
    border-radius: 1rem;
    transition: all .4s;
    margin: 1rem .5rem 0;

    &:hover {
      border-radius: 1.5rem;
      filter: brightness(1.1);
    }

    a {
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;

      img {
        width: 3.8rem;
        height: 3.8rem;
        filter: invert(1);
      }
    }

    &.twitter {
      background-color: #1DA1F2;
    }

    &.instagram {
      background-color: #d6249f;
      background-image: linear-gradient(45deg, #405de6, #5851db, #833ab4, #c13584, #e1306c, #fd1d1d);
    }

    &.facebook {
      background-color: #3b5998;

      img {
        filter: invert(1);
        transform: translate(20%, 10%);
      }
    }

    &.youtube {
      background-color: #c4302b ;
    }
  }

  &--line-separator {
    width: 90%;
    height: .08rem;
    background-color: #fff;
    margin: 1rem auto 0;
    border-radius: .5rem;

    @include responsive(phone-big) {
      width: 75%;
    }

    @include responsive(phone) {
      width: 50%;
    }

    @include responsive(phone-small) {
      width: 40%;
    }
  }

  &--visual-container {
    width: 100%;
    min-height: 50rem;
    position: relative;
    overflow: hidden;
    margin-top: 3rem;

    @include responsive(phone) {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
  }

  &--visual__chart-group {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;

    @include responsive(phone) {
      transform: scale(0.75);
      margin: -14rem 0 -11rem;
    }

    @include responsive(phone-small) {
